    xmlns:Custom="using:Windows.UI.Xaml.Controls.Maps"
    x:Class="WeatherNotifier.MainPage"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Name="Grid"
